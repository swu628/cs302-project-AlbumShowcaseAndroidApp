<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <TextView
        android:id="@+id/album_detail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/top_bar"
        android:gravity="center"
        android:text="Album detail"
        android:textColor="@color/top_text"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/album_detail"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/pager"
                android:contentDescription="Images of the album"/>

            <ImageView
                android:id="@+id/detailBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/back_background"
                app:srcCompat="@drawable/back"
                android:contentDescription="Back"/>

            <ImageView
                android:id="@+id/album_cover"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/pager"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/new_jeans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:textSize="20sp"
                android:id="@+id/album_name"
                android:layout_toRightOf="@id/album_cover"
                android:layout_below="@id/pager"
                android:text="NewJeans 1st EP 'New Jeans'"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/group_name"
                android:layout_toRightOf="@id/album_cover"
                android:layout_below="@id/album_name"
                android:text="New Jeans"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/release_date"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/album_cover"
                android:layout_below="@id/group_name"
                android:text="01 August 2022"/>

            <TextView
                android:id="@+id/album_contain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/album_cover"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="This album contains: \n- OUT BOX \n-LOG BOOK
                \n- PIN-UP BOOK \n- PHONING MANUAL BOOK \n- 1 CD \n- ID CARD
                \n- STICKER PACK \n- PHOTOCARD \n- MINI POSTER"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/album_contain"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/favourites_button"
                android:textAllCaps="false"
                android:text="Add to Favourites" />

            <TextView
                android:id="@+id/album_song"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/album_contain"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Track list: \n1. Attention \n2. Hype Boy
                \n3. Cookie \n4. Hurt"
                android:textSize="15sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>